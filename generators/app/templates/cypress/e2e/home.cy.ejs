describe('Root view', () => {
  beforeEach(() => {
    cy.visit('http://localhost:3000/')
  })

  it('should show App Name as the browser tab title', () => {
    cy.title().should('eq', '<%= name %>')
  })

  it('should render the three default seed items', () => {
    cy.contains('Item Alpha').should('be.visible')
    cy.contains('Item Bravo').should('be.visible')
    cy.contains('Item Charlie').should('be.visible')
  })
})

