#!/bin/bash
# This script is meant as a helper/utility for more easily connecting to a MYSQL database
# Feel free to modify this script to fit your needs

set -e

DOCKER_CONTAINER="<%= databaseTestContainerName %>"
MYSQL_HOST="0.0.0.0"
MYSQL_DATABASE="<%= databaseName %>"
MYSQL_USER="root"
MYSQL_USER_PASSWORD="password"

docker exec -it $DOCKER_CONTAINER "mysql -u $MYSQL_USER -p$MYSQL_USER_PASSWORD -h $MYSQL_HOST $MYSQL_DATABASE"

# Provide executing process a safe-exit code
exit 0
